/* pages/workspace/workspace/schedule/schedule.wxss */
@import '../../dist/css/icon.wxss';
page {
  background-color: #8fc1f3;
  background:-webkit-gradient(linear, 0 0, 0 bottom, from(#8fc1f3), to(#fff)); 
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: stretch;
  font-size: 14px;
}

.box {
  display: block;
  margin: 10px;
}

.box-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
}

.flex-item {
  flex-flow: nowrap;
  flex-grow: 1;
  flex-shrink: 1;
  width: 14.2%;
}

.item-content {
  margin: 3px;
  padding: 0 5px;
  text-align: center;
  height: 3rem;
  line-height: 3rem;
  color: #000;
}

.bk-color-day {
  background-color: rgb(97, 223, 255);
}

.item-content-current-day {
  flex-grow: 10;
}

.iconfontwarp{
  flex-flow: nowrap;
  flex-grow: 1;
  flex-shrink: 1;
  width: 16%;
}

.iconfont {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  color: #52b8f5;
  width: 60rpx;
  height: 60rpx;
  margin-top: 15rpx;
}

.iconfont .left, .iconfont .right {
  display: block;
  width: 0;
  height: 0;
  border-top: 20rpx solid transparent;
  border-bottom: 20rpx solid transparent;
  line-height: 4rem;

}

.iconfont .left {
  border-right: 40rpx solid transparent;
  margin-left: 150rpx; 
}

.iconfont .right {
  border-left: 40rpx solid transparent;
}

.iconfont .left.color {
  margin-top: 40rpx;
  border-right-color: #52b8f5;
}

.iconfont .right.color {
  margin-top: 40rpx;
  border-left-color: #52b8f5;
}